---
import BaseLayout from "./BaseLayout.astro";
const {
    title,
    date,
    description,
    tags = [],
    readingTime
} = Astro.props;
---

<BaseLayout pageTitle={title}>
    <article class="post">
        <header>
            <h1>{title}</h1>
            <!-- Post metadata -->
        </header>
        <div>
            <!-- Post content -->
            <slot/>
        </div>
        <footer>
            <!-- Back to blog -->
            <a href="/blog/">Back to blog</a>
        </footer>
    </article>
</BaseLayout>
