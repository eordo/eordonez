---
import BaseLayout from "./BaseLayout.astro";
const { title, date, description, tags = [], readingTime } = Astro.props;
---

<BaseLayout pageTitle={title} pageDescription={description}>
    <article class="post">
        <header class="post-header">
            <h1>{title}</h1>
            <p><em>{description}</em> &mdash; <span>{readingTime}</span></p>
            <span class="post-tags">{tags.join(" \u00b7 ")}</span>
        </header>
        <div class="post-content">
            <!-- Blog post content -->
            <slot/>
        </div>
        <hr>
        <footer class="post-footer">
            <!-- Back to blog -->
            <a href="/blog/">Back to blog</a>
            <span>{date}</span>
        </footer>
    </article>
</BaseLayout>
